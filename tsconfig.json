{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "interfaces/": ["interfaces/*"],
      "atoms/": ["atoms/*"],
      "molecules/": ["molecules/*"],
      "organisms/": ["organisms/*"],
      "templates/": ["templates/*"],
      "pages/": ["pages/*"],
      "libs/": ["libs/*"],
      "icons/": ["icons/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "src/interfaces/custom.d.ts"
  ]
}
